[Unit]
Description=load-balanced unspoofable packet switching network
After=network.target

[Service]
Type=forking
EnvironmentFile=/etc/default/i2pd
Restart=on-abnormal
PIDFile=/run/i2pd.pid
User=i2pd
PermissionsStartOnly=yes
ExecStartPre=/bin/touch /run/i2pd.pid
ExecStartPre=/bin/chown i2pd:i2pd /run/i2pd.pid
ExecStart=/usr/lib/i2pd/i2p $DAEMON_ARGS --daemon=1 --log=1 --service=1

[Install]
WantedBy=multi-user.target
